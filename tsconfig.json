{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment Settings */
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true,

    "lib": ["ES2020"],

    /* Other Outputs */
    "sourceMap": true,

    /* Stricter Typechecking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Recommended Options */
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}